<form class="form-signin" method="POST" action="/customer/authenticate">
    <img class="mb-4" src="images/api.png" alt="">
    <h1 class="h3 mb-3 font-weight-normal">Faça login</h1>
    <label for="inputEmail" class="sr-only">Endereço de email</label>
    <input value="teste@teste.com" name="email" type="email" id="inputEmail" class="form-control" placeholder="Seu email" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Senha</label>
    <input value="123" name="password" type="password" id="inputPassword" class="form-control" placeholder="Senha" required="">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    <a class="btn btn-lg btn-dark btn-block" href="/register">Cadastro</a>
    <p class="mt-5 mb-3 text-muted">© 2019</p>
</form>